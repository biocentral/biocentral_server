{
   
    admin localhost:2019
    auto_https off
}

:80/health {
    reverse_proxy {$API_BACKEND_URL}/health
}

:80 {
    # Access logging
    # For local dev: stdout with console format
    # For production: configure file logging
    log {
        output stdout
        format console
    }

    # API routes - must be before static file serving
    # All /api/v1/* routes - strip /api/v1 prefix entirely, forward to FastAPI root
    handle /api/v1/* {
        uri strip_prefix /api/v1
        reverse_proxy {$API_BACKEND_URL} {
            # Add proper headers for reverse proxy
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Serve static landing page at root
    handle {
        root * /var/www/assets
        try_files {path} /landing.html
        file_server
    }

    # Security headers
    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
}

